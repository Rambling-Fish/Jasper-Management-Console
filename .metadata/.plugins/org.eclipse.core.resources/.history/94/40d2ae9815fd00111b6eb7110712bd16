<project name="jManage" default="compile" basedir=".">

    <property name="web.home" value="${basedir}/webui/src/main/webapp"/>

    <property name="compile.debug" value="true"/>
    <property name="compile.deprecation" value="false"/>
    <property name="compile.optimize" value="true"/>

    <path id="web.compile.classpath">
        <fileset dir="${basedir}/lib">
            <include name="*.jar"/>
        </fileset>
        <fileset dir="${basedir}/web/WEB-INF/lib">
            <include name="*.jar"/>
        </fileset>
        <fileset dir="${project.basedir}/../thirdparty/jfreechart/lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <!-- ================= Compile Target ================================== -->

    <target name="compile" depends="prepare"
        description="Compile Java sources">

		<!-- Compile web Java classes as necessary -->
        <javac srcdir="${basedir}/webui/src/main/java"
            destdir="${basedir}/web/WEB-INF/classes"
            debug="${compile.debug}"
            deprecation="${compile.deprecation}"
            optimize="${compile.optimize}"
            source="1.5">
            <classpath refid="web.compile.classpath"/>
        </javac>

        <!-- create jmanage-startup.jar for starting webui -->
        <jar jarfile="${basedir}/lib/jmanage-startup.jar">
            <fileset dir="${basedir}/web/WEB-INF/classes">
                <include name="org/jmanage/webui/Startup.class"/>
								<include name="org/jmanage/webui/Startup$1.class"/>
								<include name="org/jmanage/webui/ServerMonitor.class"/>
                <include name="org/jmanage/webui/Shutdown.class"/>
                <include name="org/jmanage/webui/JettyStopKey.class"/>
			</fileset>
        </jar>

        <!-- add applet specific jars to /applets dir -->
        <mkdir dir="${basedir}/web/applets"/>
        <!-- create jar for jmanage applets -->
        <jar jarfile="${basedir}/web/applets/applets.jar">
            <fileset dir="${basedir}/web/WEB-INF/classes"
                includes="org/jmanage/webui/applets/**"/>
        </jar>
        <!-- copy jfreechart jars -->
        <copy todir="${basedir}/web/applets">
            <fileset dir="${basedir}/../thirdparty/jfreechart/lib">
                <include name="*.jar"/>
            </fileset>
        </copy>
    </target>


    <target name="prepare">

        <mkdir dir="${proiect.basedir}/lib"/>
        <mkdir dir="${project.basedir}/web"/>
        <mkdir dir="${project.basedir}/web/WEB-INF"/>
        <mkdir dir="${project.basedir}/web/WEB-INF/classes"/>
        <mkdir dir="${project.basedir}/web/WEB-INF/lib"/>

        <!-- Copy static content of this web application -->
        <copy todir="${project.basedir}/web">
            <fileset dir="${web.home}"/>
        </copy>
        <!-- set version in footer.jsp -->
        <loadfile property="expand.temp.property" srcFile="${project.basedir}/web/common/footer.jsp">
			<filterchain>
				<filterreader classname="org.apache.tools.ant.filters.ExpandProperties"/>
			</filterchain>
		</loadfile>
		<echo message="${expand.temp.property}" file="${project.basedir}/web/common/footer.jsp"/>

        <copy todir="${basedir}/web/WEB-INF/lib">
            <fileset dir="${project.basedir}/../thirdparty/struts/lib">
                <include name="*.jar"/>
                <exclude name="commons-beanutils.jar"/>
                <exclude name="commons-logging.jar"/>
            </fileset>
            <fileset dir="${project.basedir}/../thirdparty/jfreechart/lib">
                <include name="*.jar"/>
            </fileset>
        </copy>
    </target>

</project>

